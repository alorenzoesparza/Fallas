@model IEnumerable<Fallas.Domain.Componente>

@{
    ViewBag.Title = "Nuevo";
}

<h2>Componentes</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreCompleto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            Foto
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Foto))
                {

                    <img src="@Url.Content(item.Foto)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
                }
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.ComponenteId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Detalle", "Details", new { id = item.ComponenteId }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.ComponenteId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
